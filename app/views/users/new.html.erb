<h2><%= t('h2.add_user') %></h2>

<!-- peut etre mis dans un fichier html seul pour être réutiliser sur plusieurs pages (app/views/shared/_error.html.erb) -->
<% unless @user.errors.full_messages.nil? %>
    <% @user.errors.full_messages.each do |mess|  %>
        <h5 style='color: #900'><%= "#{mess}" %></h5>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :nom %>
    <%= f.text_field :nom %><br />
    <%= f.label :email %>
    <%= f.text_field :email %><br />
    <%= f.submit t('button.add') %>
<% end %>
